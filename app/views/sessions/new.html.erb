<head>
  <link rel="stylesheet" type="text/css" href="/style1.css">
 <script type="text/javascript" src="public/modernizr.custom.86080.js"></script>
</head>

<body id="page" style="margin-top: 10px;">
  <ul style="list-style: none; z-index: -1;" class="cb-slideshow">
    <li><span>Image 01</span><div><h5></h5></div></li>
    <li><span>Image 02</span><div><h5></h5></div></li>
    <li><span>Image 03</span><div><h5></h5></div></li>
    <li><span>Image 04</span><div><h5></h5></div></li>
    <li><span>Image 05</span><div><h5></h5></div></li>
    <li><span>Image 06</span><div><h5></h5></div></li>
  </ul>

<div class="container">

  <div class="row">
    <div class="col-md-3">
      <div class="jumbotron">
        <h1>Login</h1>
          <%= form_tag sessions_path, method: :post do %>
       </div>
    </div>
  </div>         


  <div class="row">
      <div class="col-md-2">
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>
      </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= submit_tag "Login", class: 'btn btn-primary' %>
  </div>

  <% end %>
  <%= link_to "Create an Account", '/users/new' %> 

  <div class="col-md-8">
    <h1 style="color: white;" align="center"><u>Welcome to <span style="color: #f04545;">atlSpeaker</span>.</u></h1>
    <p><h3 style="color: yellow;" align="center">The local connect for experts and events.  </h3></p>
    <p align="center"><%= link_to 'Speakers', speakers_path, class: 'btn btn-default' %></p>
  </div>

</div>
</body>